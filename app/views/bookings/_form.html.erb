      <% end %>
  </div>
<div class="field">
    <%= f.label :Room_user %>
    <%= f.collection_select :room_id, Room.all, :id, :name do |u| %>
    <label><%= u.name %></label>
      <% end %>
  </div>
  
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>

<% if @rooms.empty?%>
	<b>All the rooms are authorizes</b>
<%else%>
	<ul>
	<% @rooms.each do |room|%>
		<li><%= room.name%>
			<%=room.address%>
			<%= room.price%>
		</li>
		<%= form_for room do |f|%>
		<%= f.hidden_field :is_authorized, value: "true"%>
		<%= f.submit "authorize" %>
		<% end %>
	<% end %>
	</ul>
	<% end %>


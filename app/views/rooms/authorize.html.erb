<% if @rooms.empty?%>
	<b>All the rooms are authorizes</b>
<%else%>
	<ul>
	<% @rooms.each do |room|%>
		<%= room.name%>
			<%=room.address%>
			<%= room.price%>
		
		<br/>
				<%= form_for room do |f|%>
		<%= f.hidden_field :is_authorized, value: "true"%>
		<%= f.submit "authorize",class:"btn btn-primary pull-left" %>
		<% end %>
				<%= form_for room do |f|%>
		<%= f.hidden_field :is_authorized, value: "false"%>
		<%= f.submit "Unauthorize",class:"btn btn-primary" %>
		<% end %>
		<br/>
	<% end %>
	</ul>
	<% end %>


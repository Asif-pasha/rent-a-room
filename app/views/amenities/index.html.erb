<div class="row">
<div class="col-md-8"> 
<h1>Listing Amenities</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @amenities.each do |amenity| %>
      <tr>
        <td><%= amenity.name %></td>
        <td><%= amenity.description %></td>
        <% if user_signed_in? %> 
        <td><%= link_to 'Show', amenity %></td>
        <td><%= link_to 'Edit', edit_amenity_path(amenity)
         %>
           <% end %>
         </td>
        <% if user_signed_in? %> 
        <td><%= link_to 'Destroy', amenity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="col-md-4">
<br>
<h3>Add new amenity</h3>
<% if user_signed_in?  %> 
<%= link_to 'New Amenity', new_amenity_path %>
<% end %>
</div>
</div>
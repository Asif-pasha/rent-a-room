
<h1>Listing Cities</h1>
<div class="row">
<div class="col-md-8">
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <% if user_signed_in? %> 
        <td><%= link_to 'Show', city %></td>
        <td><%= link_to 'Edit', edit_city_path(city) %></td>
        <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td><%end%>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="col-md-4">
  <% if user_signed_in? %> 
  <h2>Add new City</h2>
<%= link_to 'New City', new_city_path %>
<%end %>
</div>
</div>
